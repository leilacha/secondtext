- likes_counter = product.likes_count.nil? ? '-' : product.likes_count
- if liked
  = link_to unlike_product_path(product), method: :delete, remote: true do
    = likes_counter
    %i{class: 'fa fa-heart  has-text-danger'}
- else
  = link_to like_product_path(product), method: :post, remote: true do
    = likes_counter
    %i{class: 'fa fa-heart'}
