.container
  %table{class: 'table is-fullwidth is-hoverable is-striped'}
    %thead{class: 'thead'}
      %tr
        %th Rang
        %th Titre
        %th Autrice
        %th
    %tbody{class: 'tbody'}
      - @products.each_with_index do |product, index|
        %tr
          %td= index + 1
          %td= link_to product.title, product_path(product)
          %td= product.author
          %td
            %i{class: 'fa fa-heart'}
